.hero {
  @apply mx-auto bg-white border-b dark:bg-tuna border-periblue dark:border-gun;

  &__inner {
    @apply px-4 mx-auto sm:px-6 md:px-32 pt-24;

    h1 {
      @apply py-10 mx-auto text-4xl font-bold leading-none text-comet dark:text-manatee lg:text-5xl;

      small {
        @apply block font-light text-base mt-3;
      }
    }
  }
}
